<h1>Movies#index</h1>
<p>All your lists!</p>

<div id="lists" class="row">
  <% @alllists.each do |list| %>
  <div class="card col">
  <h1 class="text-center"><%= list.name %></h1>
  <%= link_to "Go to list", list %>
  </div>
  <% end %>
</div>
<div id="movies" class="row">
  <% @allmovies.each do |movie| %>
    <div class="card col-3 text-center">
      <%=movie.title%>
      <img src=<%= movie.poster_url%> width="200" height="300">
      <p>
        <%= link_to "Show this movie", movie %>
      </p>
    </div>
  <% end %>
</div>
